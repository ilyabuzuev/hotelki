generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id         String      @id @default(uuid())
  name       String      @unique
  value      String      @unique
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  attributes Attribute[]
}

model Attribute {
  id         String   @id @default(uuid())
  name       String
  type       AttributeType
  categoryId String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  category   Category @relation(fields: [categoryId], references: [id])
}

model WishList {
  id         String   @id @default(uuid())
  name       String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  categoryId String
  categoryType String @unique
  data       Wish[]
}

model Wish {
  id         String     @id @default(uuid())
  name       String
  data       WishData[]
  wishListId String
  wishList   WishList   @relation(fields: [wishListId], references: [id])
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
}

model WishData {
  id        String   @id @default(uuid())
  key       String
  value     String
  wishId    String
  wish      Wish     @relation(fields: [wishId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum AttributeType {
  String
  Number
  Price
}
